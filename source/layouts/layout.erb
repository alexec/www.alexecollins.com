<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Alex Collins - <%= current_page.data.title  %></title>
      <%= stylesheet_link_tag 'bootstrap.min' %>
<style type="text/css">
<%= Rouge::Themes::ThankfulEyes.render(:scope => '.highlight') %>
</style>
<link href="https://plus.google.com/101694420547181110548" rel="publisher" />
  </head>
  <body class="<%= page_classes %>">
<div class="container">
    <ul class="nav nav-pills">
      <li class="<%= current_page.data.title == 'Home' ? 'active' : ''%>" ><a href="/">Home</a></li>
      <li class="<%= current_page.data.title == 'About Me' ? 'active' : ''%>"><a href="/about-me">About Me</a></li>
      <li class="<%= current_page.data.title == 'Software' ? 'active' : ''%>"><a href="/software">Software</a></li>
    </ul>
<div class="row">

    <div class="col-md-9">
    <h1><%= current_page.data.title  %></h1>
    </div>
    <%= yield %>
    <div class="col-md-3">
        <% related = blog.articles.map {|a| {:a => a, :tags => ((current_page.data.tags || '').gsub(/ /,'').split(',') & a.tags)}}.find_all{|a| a[:tags].length>0}.sort{|a,b| b[:tags].length <=> a[:tags].length}.map{|a| a[:a]}.find_all{|a| a.title!=current_page.data.title}[0...5] %>
        <% if (related.length >0) %>
      <h2>Related</h2>
      <ol>
        <% related.each do |article| %>
          <li><%= link_to article.title, article %></li>
        <% end %>
      </l>
    <% else %>
      <h2>Recent</h2>
      <ul>
        <% blog.articles[0...5].each do |article| %>
          <li><%= link_to article.title, article %> <span><%= article.date.strftime('%b %e') %></span></li>
        <% end %>
        </ul>
        <%end%>
      <h2>Tags</h2>
              <% blog.tags.sort.each do |tag, articles| %>
          <%= link_to tag, tag_path(tag) %> (<%= articles.size %>)</a>&nbsp;&nbsp;
        <% end %>
    </div>
</div>

